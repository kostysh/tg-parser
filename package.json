{
  "name": "tg-parser",
  "private": true,
  "publishConfig": {
    "access": "restricted"
  },
  "version": "0.0.0",
  "description": "Telegram Channel Parser",
  "license": "MIT",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "postinstall": "pnpm prisma:generate",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "prettier --ignore-path ./.lintignore . && eslint . --ext .ts --ignore-path ./.lintignore",
    "lint:fix": "prettier --ignore-path ./.lintignore --write . && eslint . --ext .ts --ignore-path ./.lintignore --fix",
    "build": "tsup",
    "start": "node ./dist/index.js",
    "start:dev": "node --experimental-specifier-resolution=node --loader ts-node/esm src/index.ts",
    "db:key": "./scripts/keyfile.sh",
    "db:start": "pnpm db:key && docker compose up -d",
    "db:stop": "docker compose down --rmi all --remove-orphans",
    "db:restart": "docker compose restart",
    "db:ps": "docker compose ps",
    "db:console": "docker exec -it tg_parser_mongo mongosh -u \"root\" -p \"toor\" --authenticationDatabase \"admin\"",
    "prisma:generate": "prisma generate",
    "prisma:push": "prisma db push",
    "prisma:studio": "prisma db studio"
  },
  "devDependencies": {
    "@types/node": "^20.11.26",
    "typescript": "^5.4.2",
    "tsup": "^8.0.2",
    "ts-node": "^10.9.2",
    "prettier": "^3.2.5",
    "eslint": "^8.57.0",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3"
  },
  "dependencies": {
    "telegram": "^2.20.2",
    "dotenv": "16.4.5",
    "prisma": "^5.11.0",
    "@prisma/client": "^5.11.0"
  }
}
